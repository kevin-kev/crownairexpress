{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["src"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "lib": ["dom", "esnext"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
